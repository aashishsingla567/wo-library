{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    // @react-native-async-storage/async-storage throws error
    // "declarationDir": "lib/@types",
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "outDir": "lib",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": { "classnameTransform": "camelCase" }
      }
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    // "strict": true,
    "target": "ES2015"
  },
  "include": ["src"],
  "exclude": ["**/__snapshots__", "**/__tests__", "node_modules"]
}
